{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": ["es2015", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "outDir": "dist",
        "inlineSourceMap": true,
        "declaration": true,
        "typeRoots": ["./types"]
    },
    "exclude": ["./dist/**/*", "types/index.d.ts"]
}
